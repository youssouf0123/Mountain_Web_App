 <%include ../partials/header%>
 <div class="container">
 	<div class="row">
 	<h1> Add new comment on mountain</h1>
 	<form action="/mountains/<%=mountains._id%>/comments" method="POST">
 		<div class="form-group">
 			<input class="form-control" type="text" name="comment[author]" placeholder="Author">
 		</div>
 		<div class="form-group">
 			<input class="form-control" type="text" name="comment[text]" placeholder="Text">
 		</div>
 		<div class="form-group">
 			<button class="btn btn-primary btn-lg btn-block">Add comment</button>
 		</div>
 	</form>
 	</div>
 </div>	
