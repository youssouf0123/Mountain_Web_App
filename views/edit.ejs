 <%include partials/header%>
<div class="container">
	<div class="row">
		<h1> Edit <%=mountains.name%></h1>
		<form action="/mountains/<%=mountains._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="name" value="<%=mountains.name%>" placeholder="name">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="image" value="<%=mountains.image%>" placeholder="image">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="desc" value="<%=mountains.description%>" placeholder="description">
			</div>
			<div class="form-group">
				<button class = "btn btn-primary btn-lg btn-block">Edit</button>
			</div>
		</form>
	</div>
</div>
 <%include partials/footer%>